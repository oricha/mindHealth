<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude internal representation warnings for JPA entities -->
    <Match>
        <Class name="com.mindhealth.mindhealth.domain.*"/>
        <BugPattern name="EI_EXPOSE_REP"/>
        <BugPattern name="EI_EXPOSE_REP2"/>
    </Match>
    
    <!-- Exclude internal representation warnings for Spring controllers -->
    <Match>
        <Class name="com.mindhealth.mindhealth.controller.*"/>
        <BugPattern name="EI_EXPOSE_REP"/>
        <BugPattern name="EI_EXPOSE_REP2"/>
    </Match>
    
    <!-- Exclude internal representation warnings for REST resources -->
    <Match>
        <Class name="com.mindhealth.mindhealth.rest.*"/>
        <BugPattern name="EI_EXPOSE_REP"/>
        <BugPattern name="EI_EXPOSE_REP2"/>
    </Match>
</FindBugsFilter> 